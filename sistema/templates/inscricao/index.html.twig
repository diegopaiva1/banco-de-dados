{% extends 'master.html.twig' %}

{% block title %} Inscrições {% endblock %}

{% block breadcrumb %}
<li><a href="#">Inscrições</a></li>
<li class="is-active"><a href="{{ path_for('inscricao.index') }}" aria-current="page">Visualizar</a></li>
{% endblock %}

{% block content %}
  <h1 class="label">Selecione um evento para visualizar as inscrições: </h1>
  {% for evento in eventos %}
    {% if (loop.index - 1) % 3 == 0 %}
    <div class="columns">
    {% endif %}
    <div class="column">
      <a href="{{ path_for('inscricao.evento', {'id': evento.id}) }}">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">{{ evento.nome }}</p>
              </div>
            </div>
            <div class="content"> {{ evento.descricao | slice(0, 50) ~ '...' }}
              <br>
              <br>
              <p class="label">Data de realização: <time>{{ evento.data_realizacao | date("d/m/Y") }}</time> </p> 
            </div>
          </div>
        </div>
      </a>
    </div>
    {% if loop.index % 3 == 0 %}
    </div>
    {% endif %}
  {% endfor %}
{% endblock %}
